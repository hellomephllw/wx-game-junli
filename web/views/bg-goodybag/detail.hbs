<style>
    .detail {
        padding-bottom: 10px;
    }

    .form-control {
        margin: 10px 0;
    }

    .detail-data {
        width: 400px;
        padding: 0 25px;
        margin-top: 10px;
    }

</style>
<div class="detail panel">
    <ol class="breadcrumb">
        <li><a data-link="/game/index.htm?currentPage=1" href="javascript:void(0)">Game</a></li>
        <li><a data-link="/goodybag/index.htm?currentPage=1&gameid={{gameId}}" href="javascript:void(0)">GoodyBag</a></li>
        <li class="active">Detail</li>
    </ol>
    <div class="detail-data">
        <input class="form-control detail-data" type="text" name="name" value="{{name}}" disabled>
        <textarea class="form-control detail-data" name="desc" rows="4" disabled>{{description}}</textarea>
        <p>兑换码总数：<span id="total"></span>个</p>
        <p>已领取：<span id="obtained"></span>个</p>
    </div>
</div>
<script>
    var detailPageCache = {
        api: {
            getCount: '/api/goodybag/{{goodyBagId}}/count'
        },
        total: 0,
        obtained: 0
    };

    var detailPage = {
        init: function() {
            var _this = this;
            this.initData(function() {
                _this.initPage();
                _this.initComponent();
            });
        },
        initData: function(callback) {
            getJson({
                type: 'get',
                url: detailPageCache.api.getCount,
                done: function(data) {
                    detailPageCache.total = data.total;
                    detailPageCache.obtained = data.obtained;
                    callback();
                }
            });
        },
        initPage: function() {
            $('#total').text(detailPageCache.total);
            $('#obtained').text(detailPageCache.obtained);
        },
        initComponent: function() {
            breadcrumbCpn.init();
        }
    };

    var breadcrumbCpn = {
        init: function() {
            this.initEvent();
        },
        initEvent: function() {
            $('#mainContent').off('click', '.breadcrumb').on('click', '.breadcrumb', function(event) {
                var linkUrl = $(event.target).attr('data-link');
                getHtml(linkUrl, 'mainContent');
            });
        }
    };

    detailPage.init();
</script>